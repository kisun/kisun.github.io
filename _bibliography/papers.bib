	month = jan,
	year = {2019},
	note = {Publisher: Frontiers},
	keywords = {adaptation, SNP, demographic history, Finncattle, INDEL, selective sweep, Yakutian Cattle},
	file = {Full Text:/Users/kisunpokharel/Zotero/storage/LVPWX6AA/Weldenegodguad et al. - 2019 - Whole-Genome Sequencing of Three Native Cattle Bre.pdf:application/pdf},
