	journal = {Heredity},
	author = {Yang, Ji and Li, Xin and Cao, Yin-Hong and Pokharel, Kisun and Hu, Xiao-Ju and Chen, Ze-Hui and Xu, Song-Song and Peippo, Jaana and Honkatukia, Mervi and Kantanen, Juha and Li, Meng-Hua},
	month = feb,
