	keywords = {Gene expression, Evolutionary biology, Molecular evolution},
	pages = {172--186},
	file = {Full Text:/Users/kisunpokharel/Zotero/storage/J6XHWIZA/Yang et al. - 2019 - Comparative mRNA and miRNA expression in European .pdf:application/pdf},
