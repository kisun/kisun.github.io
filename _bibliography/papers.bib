	language = {en},
	number = {2},
	urldate = {2024-04-23},
	journal = {Animal Genetics},
	author = {Hu, Xiaoju and Pokharel, Kisun and Peippo, Jaana and Ghanem, Nasser and Zhaboyev, Ismail and Kantanen, Juha and Li, Meng-Hua},
