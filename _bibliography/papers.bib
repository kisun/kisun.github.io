	number = {1},
	urldate = {2024-04-23},
	journal = {Scientific Reports},
	author = {Weldenegodguad, Melak and Pokharel, Kisun and Ming, Yao and Honkatukia, Mervi and Peippo, Jaana and Reilas, Tiina and Røed, Knut H. and Kantanen, Juha},
	month = jun,
	year = {2020},
	note = {Publisher: Nature Publishing Group},
	keywords = {Computational biology and bioinformatics, Genome evolution},
	pages = {8980},
	file = {Full Text:/Users/kisunpokharel/Zotero/storage/T4BSXUNN/Weldenegodguad et al. - 2020 - Genome sequence and comparative analysis of reinde.pdf:application/pdf},
}

@article{stranden_genomic_2019,
	title = {Genomic selection strategies for breeding adaptation and production in dairy cattle under climate change},
	volume = {123},
	copyright = {2019 The Genetics Society},
	issn = {1365-2540},
